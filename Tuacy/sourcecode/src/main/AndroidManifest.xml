<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuacy.sourcecode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".asynctask.AsyncTaskActivity" />

        <activity android:name=".handler.HandlerActivity" />

        <activity android:name=".handlerthread.HandlerThreadActivity" />

        <activity android:name="com.tuacy.sourcecode.concurrent.ConcurrentActivity" />

        <activity android:name="com.tuacy.sourcecode.inflate.InflateActivity" />

        <activity android:name=".gesturedetector.GestureDetectorActivity"/>

    </application>

</manifest>
