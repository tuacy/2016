<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuacy.xml">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tuacy.xml.shape.LineShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.OvalShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.RectangleShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.RingShapeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
