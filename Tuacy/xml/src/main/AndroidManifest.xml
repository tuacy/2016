<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuacy.xml">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tuacy.xml.shape.LineShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.OvalShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.RectangleShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.shape.RingShapeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.selector.SelectorActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.layerlist.LayerListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.bitmap.BitmapActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.ninepath.NinePathActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.levellist.LevelListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.transition.TransitionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.insert.InsertActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.clip.ClipActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.scale.ScaleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.rotate.RotateActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.animatedrotate.AnimatedRotateActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.animationlist.AnimationListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.animation.propertyanimation.PropertyAnimationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tuacy.xml.animation.viewanimation.ViewAnimationActivity"
            android:screenOrientation="portrait" />

    </application>

