<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:dither="true">

    <solid android:color="@color/colorPrimary" />

    <padding
        android:bottom="@dimen/padding_normal"
        android:top="@dimen/padding_normal"
        android:left="@dimen/padding_normal"
        android:right="@dimen/padding_normal"/>

    <stroke
        android:width="@dimen/stoke_width"
        android:color="@color/colorPrimary" />

    <corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="@dimen/corners"
        android:topRightRadius="@dimen/corners" />

</shape>